# Azure OpenAI Configuration (Optional - enables AI extraction)
AOAI_ENDPOINT=https://your-resource-name.openai.azure.com
AOAI_APIKEY=your-azure-openai-api-key-here
CHATCOMPLETION_DEPLOYMENTNAME=gpt-4o

# Advanced Azure OpenAI Parameters (Optional - fine-tune AI behavior)
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1
AI_TOP_P=0.95
AI_API_VERSION=2024-02-15-preview
AI_SYSTEM_PROMPT="You are an expert assistant that analyzes meeting transcripts and extracts actionable items. You respond in valid JSON format."

# Jira Configuration (Optional - enables actual ticket creation)
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token-here
JIRA_PROJECT_KEY=YOUR_PROJECT_KEY

# File Processing Configuration
INCOMING_DIRECTORY=Data\Incoming
ARCHIVE_DIRECTORY=Data\Archive
PROCESSING_DIRECTORY=Data\Processing

# Concurrency Configuration
MAX_CONCURRENT_FILES=3

# AI/ML Validation Services Configuration (set to false to disable temporarily)
ENABLE_VALIDATION=false
ENABLE_HALLUCINATION_DETECTION=true
ENABLE_CONSISTENCY_MANAGEMENT=true
VALIDATION_CONFIDENCE_THRESHOLD=0.5

# Extraction Customization (Optional - override default keywords and patterns)
EXTRACTION_ACTION_KEYWORDS="implement,create,fix,review,update,add,remove,investigate,analyze,setup,configure,test,develop,build,deploy,monitor,optimize,refactor,document"
EXTRACTION_BUG_KEYWORDS="bug,fix,error,issue,problem,broken,crash,failure"
EXTRACTION_INVESTIGATION_KEYWORDS="investigate,research,analyze,explore,study,examine"
EXTRACTION_DOCUMENTATION_KEYWORDS="document,write,spec,specification,manual,guide,readme"
EXTRACTION_REVIEW_KEYWORDS="review,check,validate,verify,approve,audit"
EXTRACTION_STORY_KEYWORDS="story,feature,enhancement,improvement,requirement"
EXTRACTION_MAX_TITLE_LENGTH=100

# Meeting Type Detection (Optional - customize meeting classification)
MEETING_ONEONONE_MAX_PARTICIPANTS=2
MEETING_STANDUP_MAX_CONTENT_LENGTH=1000
